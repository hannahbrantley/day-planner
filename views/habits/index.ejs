<%- include('../partials/header') %>
<%- include('../partials/nav') %>

<div class="container-lg today">
  <h2>Habits</h2>
</div>

<div style="overflow-x:auto;" class="container-lg goals">
  <table id="list">
    <thead>
      <tr class="item-c">
      <th id="checkbox"></th>
      <th>Habit</th>
      <th>Goal</th>
    </tr>
  </thead>
  <tbody>
    <% habits.forEach(function(h) { %>
      <tr>
        <td id="checkbox">
          <form action="/habits/<%= h._id %>?_method=DELETE" class="delete-form" method="POST">
            <button type="submit">X</button>
          </form>
        </td>
        <td><a href="/habits/<%= h._id %>"><%= h.name %></a></td>
        <td>
        <% if (h.goal) { %> 
        <% h.goal.forEach(function(g) { %>
          <a href="/goals/<%= g._id %>"><%= g.name %></a> 
        <%  }) %>
        <% } %>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>

  <a href="/habits/new">New Habit</a>
  </div>

<%- include('../partials/footer') %>