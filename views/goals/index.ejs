<%- include('../partials/header') %>
<%- include('../partials/nav') %>
<h2>Goals Page Wooo</h2>

<a href="/goals/new">New Goal</a>

<table id="list">
  <thead>
    <tr>
      <th>Goal Name</th>
      <th>Details</th>
      <th>Start Date</th>
      <th>Due Date</th>
    </tr>
  </thead>
  <tbody>
    <% goals.forEach(function(g) { %>
      <tr>
        <td><%= g.name %></td>
        <td><%= g.details %></td>
        <td><%= g.startDate %></td>
        <td><%= g.dueDate %></td>
        <td><a href="/goals/<%= g._id %>">SEE MORE</a></td>
        <td>
          <form action="/goals/<%= g._id %>?_method=DELETE" class="delete-form" method="POST">
          <button type="submit">Delete <%= g.name %></button>
          </form>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>


<%- include('../partials/footer') %>
